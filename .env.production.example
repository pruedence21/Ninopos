# Production Environment Variables
# Copy this to .env.production for production deployment

# Database
DATABASE_URL=postgresql://user:password@production-host:5432/ninopos_production

# NextAuth
NEXTAUTH_URL=https://yourapp.com
NEXTAUTH_SECRET=your-production-secret-key-here

# Google OAuth
GOOGLE_CLIENT_ID=your-production-google-client-id
GOOGLE_CLIENT_SECRET=your-production-google-client-secret

# Midtrans (Production)
MIDTRANS_SERVER_KEY=your-production-midtrans-server-key
MIDTRANS_CLIENT_KEY=your-production-midtrans-client-key
MIDTRANS_IS_PRODUCTION=true

# App Config
ROOT_DOMAIN=yourapp.com

# Email Service (Resend)
RESEND_API_KEY=your-production-resend-api-key
FROM_EMAIL=noreply@yourapp.com
